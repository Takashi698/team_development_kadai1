<!DOCTYPE html>
<html>
  <head>
    <title>PairPro</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <div class='body_wrapper'>
      <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
          <div class="navbar-header">
            <a class="navbar-brand" href="#">pair_pro</a>
          </div>
          <% if logged_in? %>
            <ul class="nav navbar-nav">
              <li><%= link_to "投稿一覧", blogs_path %></li>
              <li><%= link_to "投稿", new_blog_path %></li>
              <li><%= link_to "プロフィール", user_path(current_user.id) %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
              <li>
                <%= link_to "Logout", session_path(current_user.id), class: 'links', method: :delete %>
              </li>
            </ul>
          <% else %>
              <ul class="nav navbar-nav navbar-right">
                <li>
                  <%= link_to "Login",new_session_path %>
                </li>
                <li>
                  <%= link_to 'SignUp', new_user_path %>
                </li>
              </ul>
          <% end %>
        </div>
      </nav>
      <div class="flash_message">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, class: "#{key} bg-success") %>
        <% end %>
      </div>
      <%= yield %>
      <footer>
        <div class='footer'>
          <p class='copyright'>©️フッダーです ^o^</p>
        </div>
      </footer>
    </div>
  </body>
</html>
